# Variables de entorno para el servicio de predicción
# Copiar este archivo como .env y ajustar los valores

# Base de datos SQL Server - Proyecto1SLA_DB
# Formato: mssql+pyodbc://usuario:password@servidor:puerto/basedatos?driver=ODBC+Driver+18+for+SQL+Server
DATABASE_URL=mssql+pyodbc://sa:YourPassword123@host.docker.internal:1433/Proyecto1SLA_DB?driver=ODBC+Driver+18+for+SQL+Server&TrustServerCertificate=yes

# Ruta del modelo entrenado
MODEL_PATH=/app/models/sla_model.pkl

# Intervalo de recarga del modelo (segundos)
MODEL_RELOAD_INTERVAL=3600

# Máximo de muestras para entrenamiento
MAX_TRAINING_SAMPLES=10000

# Nivel de logging: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Servidor
HOST=0.0.0.0
PORT=8000
